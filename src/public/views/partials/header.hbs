<div id="header">
  <div class="logo">
    <a href="#"></a>
  </div>
  <div class="nav">
    <ul>
      <li><a href="/"> Home </a></li>
      <li>
        {{#if this.id}}
        <a href="/user/{{this.id}}"> Thông tin cá nhân </a>

        {{else}}
        <a href="/signInPage"> Thông tin cá nhân </a>

        {{/if}}
      </li>
      <li><a href="#"> Courses </a></li>
      <li><a href="#"> Blog </a></li>
    </ul>
  </div>
  <div class="search">
    <input type="text" placeholder="search..." />
    <div class="searchBtn">
      <a href="#">Search</a>
    </div>
    <div class="infoUser">
      {{#if this.image}}
      <img
        src="{{this.image}}"
        alt="chua co thong tin nguoi dung"
        onerror="this.src='https://thumbs.dreamstime.com/z/no-image-available-icon-photo-camera-flat-vector-illustration-132483296.jpg';"
      />
      <div class="infoUser-detail">
        <ul>
          <li>UserName: <span>{{this.userName}}</span></li>
          <li>Job: <span>{{this.job}}</span></li>
          <li>Money: <span>{{this.money}}</span></li>
        </ul>
        <div class="logout login">
          {{#if this.image}}
          <a href="/logout">Log out</a>
          {{else }}
          <a href="/signInPage">Log in</a>
          {{/if}}
        </div>
      </div>
      {{else}}
      <img
        src="{{user.image}}"
        alt="chua co thong tin nguoi dung"
        onerror="this.src='https://thumbs.dreamstime.com/z/no-image-available-icon-photo-camera-flat-vector-illustration-132483296.jpg';"
      />
      <div class="infoUser-detail">
        <ul>
          <li>UserName: <span>{{user.userName}}</span></li>
          <li>Job: <span>{{user.job}}</span></li>
          <li>Money: <span>{{user.money}}</span></li>
        </ul>
        <div class="logout login">
          {{#if user.image}}
          <a href="/logout">Log out</a>
          {{else }}
          <a href="/signInPage">Log in</a>
          {{/if}}
        </div>
      </div>
      {{/if }}
    </div>
  </div>
</div>

<script>
  const search = document.querySelector("#header .search");
  const infoUserDetail = document.querySelector(
    "#header .search .infoUser .infoUser-detail"
  );
  search.addEventListener("click", (e) => {
    if (
      e.target.closest(".search .infoUser") &&
      !e.target.closest(".search .infoUser .infoUser-detail")
    ) {
      infoUserDetail.classList.toggle("show");
    }
  });
</script>
